<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_grow"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="рост"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Пол"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="358dp" />

    <Switch
        android:id="@+id/Switch_Gender_ID"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="358dp" />

    <EditText
        android:id="@+id/txt_weight"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="вес"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Вес"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Рост"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="232dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button_Next_ID"
        android:layout_width="276dp"
        android:layout_height="39dp"

        android:background="?android:attr/autofilledHighlight"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:enabled="true"
        android:onClick="nextMethod"
        android:padding="10dp"
        android:text="Перейти"
        android:textColor="#CFCC06"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="514dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:ellipsize="end"
        android:text="Пол"
        android:textAlignment="center"
        android:textColor="@color/material_on_primary_emphasis_high_type"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="424dp" />

</androidx.constraintlayout.widget.ConstraintLayout>